<header>
  <div class="container-fluid">
    <div class="row">

      <!-- BEGIN NAV-->
      <nav class="navbar navbar-fixed-top navbar-default">
        <!-- BRAND -->
        <%= link_to 'myRecipes', root_path, class: 'navbar-brand btn btn-lg btn-success', id: 'logo'  %>
        <!-- END BRAND -->
        <!-- NAVBAR LINKS-->
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to 'myRecipes2', '#', class: 'nav-link btn btn-default btn-warning' %></li>
          <% if logged_in? %>
              <li class="nav-item"><%= link_to 'Create New Recipe', new_recipe_path, class: 'nav-link btn btn-default btn-warning' %></li>

              <ul class="nav-item">
                <li class="dropdown">
                  <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                    <%= current_user.chefname %> <b class="caret"></b>
                  <% end %>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'View Profile', chef_path(current_user) %></li>
                    <li><%= link_to 'Edit Profile', edit_chef_path(current_user) %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Log Out", logout_path %></li>
                  </ul>
                </li>
              </ul>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Log In', login_path, class: 'nav-link btn btn-default btn-success' %>
              </li>
            <% end %>
        </ul>
      </nav>
      <!-- END NAV -->

    </div>
  </div>
  <!-- END BOOTSTRAP POS-->
</header>
<!-- ****** END HEADER *******-->